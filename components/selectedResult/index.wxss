.select-title{
  padding: 20rpx 16rpx;
  font-size: 30rpx;
  border-top:16rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
  font-weight: bold;
}
.scroll{
  display: flex;
  width: 100vw;
  height: 460rpx;
}
.tab-select{
  height: 460rpx;
  padding: 16rpx 8rpx;
  background: #eee;
}
.tab-select-item{
  width: 300rpx;
  height: 460rpx;
  padding: 0rpx;
  flex-direction: column;
  margin-left: 16rpx;
}
.select-item-imgbox{
  position: relative;
  width: 300rpx;
  height: 300rpx;
  background: #ccc
}
.select-bdg{
  position: absolute;
  top:0;
  left: 0;
  padding: 1rpx 10rpx;
  color: #fff;
  background: #19d;
  border-radius: 3rpx,3rpx,3rpx,0;
  text-align: center;
}
.select-item-imgbox image{
  width: 100%;
  height: 100%;

}
.select-item-texts{
  padding: 10rpx;
  box-sizing: border-box;
}
.select-item-texts view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.price-del{
  color: #8b8b8b;
  text-decoration: line-through
}
.select-item-explain{
  color:#999;
}
.font-little{
  font-size: 26rpx;
}
.font-big{
  font-size: 32rpx;
}
.select-item-red{
  color:  #f00;
}