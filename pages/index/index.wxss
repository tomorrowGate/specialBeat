/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 100vh;
  text-align: center;
}
.container{
  padding: 0;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.getUserInfo{
  width: 600rpx;
  border-radius: 50rpx;
  color: #fff;
  font-weight: 100;
  background: #ffac41
}
.blue{
  color:  #ffac41
}
.getUserInfo::after{
  border:none
}

.get-phone-out{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.get-phone{
  width: 70%
}
.virified{
  width: 30%;
  height: 50rpx;
  line-height: 50rpx;
  background: #33cd5f;
  color: #fff;
  border-radius: 6rpx;
}